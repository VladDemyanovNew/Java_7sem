<project name="Lab13" default="copy">
    <target name="init">
        <echo message="Building Lab13 Project"/>
        <property name="server"
                  value="D:\Software\apache-tomcat-9.0.67"/>
        <property name="work"
                  value="D:\University\7_Sem\Java_7sem\Labs\Lab13"/>
    </target>

    <target name="compile" depends="init">
        <delete verbose="true">
            <fileset dir="${work}\build"/>
        </delete>
        <!-- Attribute 'fork' allows to run the java-Compiler in it's own jvm -->
        <javac  fork="yes"
                includeantruntime="false"
                srcdir="${work}\src"
                destdir="${work}\build">
            <classpath>
                <fileset file="${server}\lib\servlet-api.jar"/>
                <fileset file="${server}\lib\jsp-api.jar"/>
            </classpath>
        </javac>
    </target>

    <target name="create" depends="compile">
        <delete dir="${server}\webapps\Lab13\"/>
        <mkdir dir="${server}\webapps\Lab13\"/>
        <mkdir dir="${server}\webapps\Lab13\WEB-INF"/>
    </target>

    <target name="copy" depends="create">
        <copy todir="${server}\webapps\Lab13\WEB-INF">
            <fileset dir="${work}\src\WEB-INF\" />
        </copy>
        <copy todir="${server}\webapps\Lab13\">
            <fileset dir="${work}\src\jsp"/>
        </copy>
        <copy todir="${server}\webapps\Lab13\WEB-INF\classes">
            <fileset dir="${work}\build"/>
        </copy>
    </target>
</project>